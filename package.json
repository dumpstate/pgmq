{
	"name": "@dumpstate/pgmq",
	"version": "0.5.2",
	"description": "PostgreSQL-based message queue",
	"main": "lib/index.js",
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"build:test": "tsc --project test.tsconfig.json",
		"lint": "prettier --check .",
		"prepublish": "npm run build",
		"style:fix": "prettier --write .",
		"test": "npm run build:test && PGUSER=pgmq PGHOST=localhost PGDATABASE=pgmq_db tap libtest/test/*.test.js libtest/test/**/*.test.js"
	},
	"author": "Albert Sadowski <asadowski@mailbox.org>",
	"license": "MIT",
	"devDependencies": {
		"@dumpstate/bongojs": "^0.24.2",
		"@dumpstate/dbaction": "^0.2.5",
		"@types/node": "^20.4.2",
		"@types/pg": "^8.10.2",
		"@types/tap": "^15.0.8",
		"pg": "^8.11.1",
		"prettier": "^3.0.0",
		"tap": "^16.3.4",
		"typescript": "^5.1.6"
	},
	"peerDependencies": {
		"@dumpstate/bongojs": "^0.24.2",
		"@dumpstate/dbaction": "^0.2.5"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/",
		"access": "public"
	},
	"tap": {
		"check-coverage": false
	}
}
